<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/home_background_iv"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:src="@drawable/img_default_4_x_1"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/home_btn_setting_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/btn_main_setting"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/home_btn_ticket_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/btn_main_ticket"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toStartOf="@id/home_btn_setting_iv"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/home_btn_nugu_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/btn_nugu"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toStartOf="@id/home_btn_ticket_iv"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/home_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="포근하게 덮어주는 꿈의 \n목소리"
            android:textColor="#ffffff"
            android:textSize="23sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/home_btn_nugu_iv"
            app:layout_constraintStart_toStartOf="parent"
            />

        <ImageView
            android:id="@+id/home_btn_play_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/btn_panel_play_large"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_title_tv"/>

        <ImageView
            android:id="@+id/home_album_exp_01_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/img_album_exp"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="@id/home_background_iv"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/home_album_exp_text_01_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="잠이 안온다"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/home_album_exp_01_iv"
            app:layout_constraintStart_toEndOf="@id/home_album_exp_01_iv"
            app:layout_constraintBottom_toTopOf="@id/home_album_exp_text_02_tv"
            />

        <TextView
            android:id="@+id/home_album_exp_text_02_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="젠(zen)"
            android:layout_marginStart="10dp"
            android:textColor="#ffffff"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/home_album_exp_01_iv"
            app:layout_constraintBottom_toBottomOf="@id/home_album_exp_01_iv"
            app:layout_constraintTop_toBottomOf="@id/home_album_exp_text_01_tv"
            />



        <ImageView
            android:id="@+id/home_album_exp_02_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/img_album_exp"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toTopOf="@id/home_album_exp_01_iv"
            app:layout_constraintStart_toStartOf="parent"
            />



        <TextView
            android:id="@+id/home_album_exp_text_03_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="잠이 안온다"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/home_album_exp_02_iv"
            app:layout_constraintStart_toEndOf="@id/home_album_exp_02_iv"
            app:layout_constraintBottom_toTopOf="@id/home_album_exp_text_04_tv"
            />

        <TextView
            android:id="@+id/home_album_exp_text_04_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="젠(zen)"
            android:layout_marginStart="10dp"
            android:textColor="#ffffff"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/home_album_exp_02_iv"
            app:layout_constraintBottom_toBottomOf="@id/home_album_exp_02_iv"
            app:layout_constraintTop_toBottomOf="@id/home_album_exp_text_03_tv"
            />

        <TextView
            android:id="@+id/home_album_data_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 15곡 2019.11.11"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@id/home_album_exp_02_iv"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/home_today_album_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/home_background_iv"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="오늘 발매 음악"
            />

        <ImageView
            android:id="@+id/home_today_btn_more_iv"
            android:layout_width="30dp"
            android:layout_height="27dp"
            android:src="@drawable/btn_arrow_more"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/home_today_album_text_tv"
            app:layout_constraintTop_toTopOf="@id/home_today_album_text_tv"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>

