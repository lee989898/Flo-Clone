<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:orientation="vertical"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/detail_information_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/detail_album_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/detail_album_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:text="앨범명"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/detail_album_title_text_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="IU 5th Album 'LILAC'"
                        android:textSize="10sp"
                        app:layout_constraintStart_toEndOf="@id/detail_album_title_tv"
                        app:layout_constraintTop_toTopOf="@id/detail_album_title_tv"
                        app:layout_constraintBottom_toBottomOf="@id/detail_album_title_tv"/>


                    <TextView
                        android:id="@+id/detail_album_artist_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:text="아티스트"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/detail_album_title_tv"
                        />

                    <TextView
                        android:id="@+id/detail_album_artist_text_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아이유 (IU)"
                        android:textSize="10sp"
                        app:layout_constraintStart_toStartOf="@id/detail_album_title_text_tv"
                        app:layout_constraintTop_toTopOf="@id/detail_album_artist_tv"
                        app:layout_constraintBottom_toBottomOf="@id/detail_album_artist_tv"/>


                    <TextView
                        android:id="@+id/detail_album_label_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:text="발매사"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/detail_album_artist_tv"
                        />

                    <TextView
                        android:id="@+id/detail_album_label_text_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="카카오엔터테인먼트"
                        android:textSize="10sp"
                        app:layout_constraintStart_toStartOf="@id/detail_album_title_text_tv"
                        app:layout_constraintTop_toTopOf="@id/detail_album_label_tv"
                        app:layout_constraintBottom_toBottomOf="@id/detail_album_label_tv"/>

                    <TextView
                        android:id="@+id/detail_album_agency_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:text="기획사"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/detail_album_label_tv"
                        />

                    <TextView
                        android:id="@+id/detail_album_agency_text_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EDAM엔터테인먼트"
                        android:textSize="10sp"
                        app:layout_constraintStart_toStartOf="@id/detail_album_title_text_tv"
                        app:layout_constraintTop_toTopOf="@id/detail_album_agency_tv"
                        app:layout_constraintBottom_toBottomOf="@id/detail_album_agency_tv"/>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/detail_text_layout"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/detail_album_layout"
                    android:layout_height="wrap_content">



                    <TextView
                        android:id="@+id/detail_album_information_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="10dp"
                        android:text="앨범정보"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />




                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>









        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>